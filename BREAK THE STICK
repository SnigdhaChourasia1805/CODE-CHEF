#include <iostream>
using namespace std;
int main()
{
     int t;
     cin >> t;
     while (t--)
     {
          int n, x, count = 0;
          cin >> n >> x;

          if (n % 2 != 0)
          {
               if(x%2!=0)
               {
                    cout <<"YES"<<endl;
               }
               else
               {
                    cout <<"NO"<<endl;
               }
          }
          else
          {
               cout << "YES" << endl;
          }
     }

     return 0;
}
