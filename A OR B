#include<iostream>
using namespace std;
int main()
{
    int t;
    cin>>t;
    while(t--){
        int a,b;
        cin>>a>>b;
        int x = 500-2*a+1000-4*(a+b);
        int y = 1000-4*b+500-2*(a+b);
        if(x>y){
            cout<<500-2*a + 1000-4*(a+b)<<endl;
        }
        else{
            cout<<500-2*(a+b) + 1000-4*b <<endl;
        }
    }
    return 0;
}
