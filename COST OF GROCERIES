#include <iostream>
using namespace std;

int main() {
	int t;
	cin>>t;
	int N,X;
	for(int i=0;i<t;i++){
	    int cost =0;
	    cin>>N>>X;
	    int a[N];
	    int b[N];
	    for(int i=0;i<N;i++){
	        cin>>a[i];
	    }
	    for(int i=0;i<N;i++){
	        cin>>b[i];
	    }
	    for(int i=0;i<N;i++){
	        if(a[i]>=X){
	            cost = cost + b[i] ;
	        }
	    }
	    cout<<cost<<endl;
	    
	    
	}
	return 0;
}
